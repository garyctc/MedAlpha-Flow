  "spacing": {
    "scale": [4, 8, 12, 16, 20, 24, 32, 48],
    "unit": "px",
    "usage": {
      "4": "Tight gaps, icon padding (xs)",
      "8": "Default gap, button padding (sm)",
      "12": "Component vertical spacing",
      "16": "Card padding, screen padding minimum (md)",
      "20": "Card padding comfortable",
      "24": "Section gaps (lg)",
      "32": "Large section separation (xl)",
      "48": "Major layout gaps (2xl)"
    }
  },

  "borderRadius": {
    "sm": {
      "value": "8px",
      "tailwindClass": "rounded-sm",
      "usage": "Chips, badges, small elements"
    },
    "md": {
      "value": "12px",
      "tailwindClass": "rounded-md",
      "usage": "Input fields, buttons, small cards"
    },
    "lg": {
      "value": "16px",
      "tailwindClass": "rounded-lg",
      "usage": "Cards, panels"
    },
    "xl": {
      "value": "20px",
      "tailwindClass": "rounded-xl",
      "usage": "Bottom sheets, modals, large cards"
    },
    "pill": {
      "value": "9999px",
      "tailwindClass": "rounded-full",
      "usage": "Pill buttons, avatars, toggles"
    }
  },

  "shadows": {
    "soft": {
      "value": "0 1px 3px rgba(28, 42, 56, 0.06)",
      "usage": "Subtle depth, list items"
    },
    "card": {
      "value": "0 2px 8px rgba(28, 42, 56, 0.08)",
      "usage": "Card elevation, default shadow"
    },
    "elevated": {
      "value": "0 4px 16px rgba(28, 42, 56, 0.12)",
      "usage": "Modals, bottom sheets, elevated surfaces"
    }
  },

  "typography": {
    "fontFamily": {
      "sans": ["DM Sans", "system-ui", "sans-serif"]
    },
    "scale": {
      "h1": {
        "fontSize": "1.75rem",
        "lineHeight": "2.25rem",
        "fontWeight": "700",
        "usage": "Page titles"
      },
      "h2": {
        "fontSize": "1.375rem",
        "lineHeight": "1.875rem",
        "fontWeight": "600",
        "usage": "Section headers"
      },
      "h3": {
        "fontSize": "1.125rem",
        "lineHeight": "1.625rem",
        "fontWeight": "600",
        "usage": "Subsections, card titles"
      },
      "bodyLg": {
        "fontSize": "1.125rem",
        "lineHeight": "1.75rem",
        "fontWeight": "400",
        "usage": "Large body text, introductions"
      },
      "body": {
        "fontSize": "1rem",
        "lineHeight": "1.5rem",
        "fontWeight": "400",
        "usage": "Default body text"
      },
      "label": {
        "fontSize": "0.875rem",
        "lineHeight": "1.25rem",
        "fontWeight": "500",
        "usage": "Form labels, navigation"
      },
      "caption": {
        "fontSize": "0.875rem",
        "lineHeight": "1.25rem",
        "fontWeight": "400",
        "usage": "Metadata, helper text"
      },
      "small": {
        "fontSize": "0.75rem",
        "lineHeight": "1rem",
        "fontWeight": "400",
        "usage": "Fine print, timestamps"
      }
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "german": {
      "note": "German text tends to be 20-30% longer than English. Design for flexible layouts."
    }
  },

  "animation": {
    "duration": {
      "fast": "200ms",
      "default": "250ms",
      "slow": "300ms",
      "accordion": "700ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "note": "Smooth, purposeful. Subtle delight allowed."
    },
    "effects": {
      "hoverScale": "scale(1.05)",
      "pressScale": "scale(0.98)",
      "liftTranslate": "translateY(-2px)",
      "note": "Hover effects allowed for warmth and delight"
    }
  },

  "touchTargets": {
    "minimum": "44px",
    "comfortable": "48px",
    "note": "WCAG 2.1 AA compliant. 48px for critical actions."
  },

  "accessibility": {
    "mode": {
      "standard": {
        "fontSize": "1rem",
        "touchTarget": "44px",
        "contrast": "4.8:1"
      },
      "enhanced": {
        "fontSize": "1.125rem",
        "touchTarget": "48px",
        "contrast": "7:1",
        "lineHeight": "1.6",
        "description": "For users who need larger text and touch targets"
      }
    },
    "tokens": {
      "focusRingWidth": "2px",
      "focusRingWidthEnhanced": "3px",
      "focusRingOffset": "2px",
      "focusRingColor": "#12a395",
      "highContrastBorder": "#1c2a38",
      "largeTextScale": "1.125"
    },
    "wcag": {
      "target": "WCAG 2.1 AA",
      "contrastMinimum": "4.8:1",
      "contrastLargeText": "3:1"
    }
  },

  "i18n": {
    "supportedLocales": ["de", "en"],
    "defaultLocale": "de",
    "note": "German primary, English secondary"
  }
}
