{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Partner Configuration Schema",
  "description": "White-label partner configuration with brand overrides",
  "type": "object",
  "properties": {
    "partnerId": {
      "type": "string",
      "description": "Unique identifier for the partner"
    },
    "branding": {
      "type": "object",
      "properties": {
        "appName": {
          "type": "string",
          "description": "Application name (e.g., 'Partner Health')"
        },
        "companyName": {
          "type": "string",
          "description": "Company legal name"
        },
        "supportEmail": {
          "type": "string",
          "format": "email",
          "description": "Support email address"
        },
        "tagline": {
          "type": "string",
          "description": "App tagline/subtitle"
        }
      }
    },
    "assets": {
      "type": "object",
      "properties": {
        "logo": {
          "type": "string",
          "description": "Path to logo asset (relative to public/ or absolute URL)"
        },
        "favicon": {
          "type": "string",
          "description": "Path to favicon asset"
        }
      }
    },
    "colors": {
      "type": "object",
      "description": "Semantic color overrides (hex values)",
      "properties": {
        "primary": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Primary brand color"
        },
        "secondary": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Secondary brand color"
        },
        "success": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Success state color"
        },
        "warning": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Warning state color"
        }
      }
    },
    "features": {
      "type": "object",
      "description": "Feature flags for this partner",
      "properties": {
        "prescriptionEnabled": {
          "type": "boolean"
        },
        "telemedicineEnabled": {
          "type": "boolean"
        },
        "appointmentsEnabled": {
          "type": "boolean"
        }
      }
    }
  },
  "required": ["partnerId"]
}
